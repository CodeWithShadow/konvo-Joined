  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.3.0"
  },
  "private": true,
  "keywords": [
    "firebase",
    "cloud-functions",
